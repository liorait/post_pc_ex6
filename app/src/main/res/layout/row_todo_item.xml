<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/teal_200"
    android:minHeight="40dp">


    <!-- TODO: edit this file as you want-->
    <!-- ADD text image view-->


    <EditText
        android:id="@+id/toDoTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="10dp"
        android:background="@color/cardview_light_background"
        android:fontFamily="casual"
        android:singleLine="false"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableBottomCompat="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/createdDateTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:checked="false"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/createdDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="None"
        app:layout_constraintBottom_toBottomOf="@id/toDoTextView"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/TextViewCD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Created date: "
        app:layout_constraintBottom_toBottomOf="@id/toDoTextView"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="97dp"
        android:layout_height="44dp"
        android:layout_marginRight="20dp"
        android:fontFamily="casual"
        android:text="Edit"
        android:visibility="visible"
        app:layout_constraintRight_toLeftOf="@id/deleteButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editDoneBtn"
        android:layout_width="97dp"
        android:layout_height="44dp"
        android:layout_marginRight="20dp"
        android:fontFamily="casual"
        android:text="Done"
        android:visibility="gone"
        app:layout_constraintRight_toLeftOf="@id/deleteButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deleteButton"
        android:layout_width="31dp"
        android:layout_height="40dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="48dp"
        android:drawableRight="@drawable/ic_delete"
        android:fontFamily="casual"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/buttonViewOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="404dp"
        android:text="&#8942;"
        android:textAppearance="?android:textAppearanceLarge"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

